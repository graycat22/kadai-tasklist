<% if tasks.any? %>
<h1>タスク一覧</h1>
<ul>
  <% tasks.each do |task| %>
    <li>
      <div>
        <% unless current_page?(task.user) %>
          <%= link_to task.user.name, user_path(task.user) %>
        <% end %>
      </div>
      <div>
        <%= task.content %>
      </div>
      <div>
        <% if current_user == task.user %>
          <%= link_to "削除", task, method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
<%== pagy_bootstrap_nav(@pagy) %>
<% end %>